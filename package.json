{
  "name": "mailpilot",
  "version": "1.3.0",
  "description": "AI-powered email processing daemon using LLM classification",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest"
  },
  "keywords": [
    "email",
    "imap",
    "ai",
    "llm",
    "automation",
    "classification"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.0",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "hono": "^4.11.4",
    "imapflow": "^1.2.6",
    "mailparser": "^3.9.1",
    "pdfjs-dist": "^5.4.530",
    "tesseract.js": "^7.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.0.8",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
