{
  "name": "mailpilot",
  "version": "1.8.1",
  "description": "AI-powered email processing daemon using LLM classification",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "setup": "pnpm install",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && pnpm run dashboard:build",
    "build:backend": "tsc",
    "dashboard:dev": "cd dashboard && pnpm dev",
    "dashboard:build": "cd dashboard && pnpm build",
    "docs:dev": "pnpm --filter mailpilot-docs run dev",
    "docs:build": "pnpm --filter mailpilot-docs run build",
    "docs:generate:api": "pnpm --filter mailpilot-docs run generate:api",
    "docs:generate:changelog": "pnpm --filter mailpilot-docs run generate:changelog",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report tests/e2e/reports/html",
    "seed:test": "tsx scripts/seed-test-data.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "email",
    "imap",
    "ai",
    "llm",
    "automation",
    "classification"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "cookie": "^1.0.3",
    "hono": "^4.11.4",
    "imapflow": "^1.2.6",
    "mailparser": "^3.9.1",
    "pdfjs-dist": "^5.4.530",
    "tesseract.js": "^7.0.0",
    "ws": "^8.18.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie": "^1.0.0",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.0.8",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}
